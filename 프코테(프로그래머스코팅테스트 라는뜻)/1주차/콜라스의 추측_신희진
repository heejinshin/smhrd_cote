def solution(num):
    cnt = 0
    result = 0
    while num!=1:
        cnt+= 1
        if num == 1:
            result = 1
        elif num & 1 == 0: #ì§ìˆ˜
                num = int(num / 2)
        else: 
            num = num * 3 + 1
            result = num
        if cnt == 501:
            result = -1
    return result
