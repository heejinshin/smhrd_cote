def solution(n):
    
    list=[] #3진수 담을 리스트 
    result=0 #10진수 결과 

    while n!=0: 
        list.append(n%3) #3으로 나눈 나머지 
        n=n//3 #3으로 나눈 몫 
    
        answer =0
        for i in range(len(list)): 
            result = ((3**(len(list)-i-1))*list[i]) 
            answer  += result 
    
    return answer
